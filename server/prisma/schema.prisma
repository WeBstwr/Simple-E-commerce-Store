generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model
model User {
  id          Int       @id @default(autoincrement())
  fullName    String
  phoneNumber String
  email       String    @unique
  password    String
  role        Role
  cartItems   CartItem[]
}

// Product model
model Product {
  id        Int       @id @default(autoincrement())
  name      String
  image     String
  price     Float
  category  Category
  cartItems CartItem[]
}

// CartItem model
model CartItem {
  id        Int     @id @default(autoincrement())
  user      User    @relation(fields: [userId], references: [id])
  userId    Int
  product   Product @relation(fields: [productId], references: [id])
  productId Int
  quantity  Int
}

enum Role {
  user
  admin
}

enum Category {
  Apparels
  T_shirts
  Sunglasses
}
